<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E5959">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="321dp"
        android:layout_height="307dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/map" />

    <FrameLayout
        android:id="@+id/btn_sign_in_email"
        android:layout_width="218dp"
        android:layout_height="51dp"
        android:layout_marginTop="150dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fui_idp_button_background_email"
            android:gravity="center"
            android:text="@string/fui_sign_in_with_email"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            app:srcCompat="@android:drawable/ic_dialog_email" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/btn_sign_in_google"
        android:layout_width="218dp"
        android:layout_height="51dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign_in_email">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fui_idp_button_background_google"
            android:gravity="center"
            android:text="@string/fui_sign_in_with_google"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8dp"
            app:srcCompat="@drawable/fui_ic_googleg_color_24dp"
            android:paddingStart="8dp" />
    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>